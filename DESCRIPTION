    graphics,
    grDevices,
    IRanges (>= 2.4.8),
    lazyeval (>= 0.2.0),
    matrixStats (>= 0.52),
    magrittr (>= 1.5),
    methods,
    NMF (>= 0.20.6),
    rtracklayer (>= 1.36.4),
    S4Vectors (>= 0.14.4),
    stats,
    tidyr (>= 0.6.3)
